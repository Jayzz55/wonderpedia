=form_for wiki do |f|
  .form-group
    =f.label :title, 'title'
    =f.text_field :title, class: 'form-control', placeholder: "Enter wiki title"
  
  .form-group
    =f.label :body, 'wiki'
    #epiceditor
    .hidden
      =f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter wiki description"
  -if current_user.premium == true  
    .form-group
      =f.label :private, 'private'
      =f.check_box :private
      %p.help-block Set this as a private wiki

  =f.submit "Save", class: 'btn btn-success'

%script{:charset => "utf-8", :type => "text/javascript"}
  var opts = {
  container: 'epiceditor',
  basePath: '',
  localStorageName: 'epiceditor #{current_user} #{wiki}',
  textarea: "wiki_body",
  theme: {
  base: '#{asset_path("base/epiceditor.css")}',
  editor: '#{asset_path("editor/epic-dark.css")}'
  }
  };
  var editor = new EpicEditor(opts).load();