.row
  .col-md-2
  .col-md-8
    %h2 My wikis
    %table.table.js-todos.table-striped
      %thead
        %tr
          %th Title
          %th status
          %th Edit
          %th Delete
          -if current_user.premium
            %th Share
      =render partial: 'wikis/wiki', collection: @wikis

    %p
      %a.btn.btn-primary.btn-lg{href: new_wiki_path, role: "button"} Create new wiki
  .col-md-2
